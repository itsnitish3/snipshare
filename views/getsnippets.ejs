<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Please enter your security key to get snippets</h1>
            <% include ./messages %>
                <form action="getsnippet" method="POST">
                    <div class="form-group">
                        <input type="hidden" id="shortUrl" name="shortUrl" class="form-control"  value='<%=params.snipptid%>'> 
                    </div>
                    <div class="form-group">
                        <label for="password">key</label>
                        <input type="password" id="key" name="key" class="form-control" required
                            placeholder="Enter key" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">submit</button>
                </form>
               
        </div>
    </div>
</div>